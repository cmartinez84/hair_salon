<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body><h1>All Clients for {{stylist.name}}</h1>
        {% if clients is not empty%}
            {% for client in clients %}
            <div class="stylist">
                <h3>{{client.name}}</h3>
                <form class="" action="/stylist/{{stylist.id}}/delete/{{client.id}}" method="post">
                    <input name="_method" type="hidden" value="delete">

                    <button type="submit" name="button">Delete Client</button>
                </form>
                <form class="" action="/stylist/{{stylist.id}}/edit/" method="post">
                    <p>Edit Client Info:</p>
                    <input name="person" type="hidden" value="{{client.id}}">
                    <input name="_method" type="hidden" value="patch">
                    <input type="hidden" name="stylist_id" value={{stylist.id}}>
                    <label for="">Change Client Name:</label>
                    <input type="text" name="name" value="{{client.name}}">
                    <label for="">Change Last Appointment:</label>
                    <input type="text" name="last_appointment" value="{{client.last_appointment}}">
                    <label for="">Change Next Appointment:</label>
                    <input type="text" name="next_appointment" value="{{client.next_appointment}}">
                    <button type="submit" name="button">Submit</button>
                </form>

            </div>
            {% endfor %}
        {% endif %}
        <form class="" action="/stylist/{{stylist.id}}" method="post">
            <input type="hidden" name="stylist_id" value={{stylist.id}}>
            <label for="">Enter Client</label>
            <input type="text" name="name" value="">
            <label for="">Last Appointment</label>
            <input type="text" name="last_appointment" value="">
            <label for="">Next Appointment</label>
            <input type="text" name="next_appointment" value="">
            <button type="submit" name="button">Submit</button>
        </form>
    </body>
</html>
